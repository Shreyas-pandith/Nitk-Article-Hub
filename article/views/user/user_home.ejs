<script>

$(document).ready(function () {
    $('#author').keyup(function () {
            var query1 = $(this).val();
            if (query1 != '') {
                $.ajax({
                    url: "/user/searchajax2/",
                    method: "POST",
                    data: { query2: query1 },
                    success: function (data) {
                        $('#result1').fadeIn();
                        $('#result1').html(data);
                    }
                });
            }
        });
});
</script>
<script>
    //Ajax search based on keywords
    $(document).ready(function () {
        

        $('#keyword').keyup(function () {
            var query = $(this).val();
            if (query != '') {
                $.ajax({
                    url: "/user/searchajax/",
                    method: "POST",
                    data: { query: query },
                    success: function (data) {
                        $('#result').fadeIn();
                        $('#result').html(data);
                    }
                });
            }

        });
    });
    $(document).on('click', '.u li', function () {
        $('#keyword').val($(this).text());
        $('#result').fadeOut();

    });
    $('body').on('click', function () {
        $('#result').fadeOut();
    });
</script>
