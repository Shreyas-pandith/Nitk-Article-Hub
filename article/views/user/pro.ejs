<!doctype html>
<html lang="en">
  <head>
    <title>Profile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <link href="https://fonts.googleapis.com/css?family=Rubik:300,400,500" rel="stylesheet">

    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="css/owl.carousel.min.css">

    <link rel="stylesheet" href="fonts/ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="fonts/fontawesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="css/magnific-popup.css">

    <!-- Theme Style -->
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    
    



    
    <!-- END section -->

    <section class="site-section bg-light element-animate" id="section-counter">
      <div class="container">
        <div class="row">
          <div class="col-lg-6">
                <div class="text-center">
                        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="img-responcive img-circle img-thumbnail" alt="avatar">
                       
                      </div><br>
      

                               
                          
                          <div class="row">
                              <div class="col-lg-6 col-sm-12">
                                    <ul class="list-group">
                                            <li class="list-group-item text-muted"><%= student.name%></li>
                                           
                                            <li class="list-group-item text-right"><span class="pull-left"><%= student.course %></li>
                                            <li class="list-group-item text-right"><span class="pull-left"><%= student.branch %> </li>
                                           
                                          </ul> 
                              </div>

                              <div class="col-lg-6 col-sm-12">
                                    <ul class="list-group">
                                            <li class="list-group-item text-muted"><%= student.email %></li>
                                           
                                            <li class="list-group-item text-right"><span class="pull-left"><%= student.mobile %></li>
                                            <li class="list-group-item text-right"><span class="pull-left"><%= student.address %></li>
                                           
                                          </ul> 
                                </div>
                          </div>
                          
                          
                               
          </div>

          <div class="col-lg-5 ml-auto">
            <div class="block-15">
              <div class="heading">
                <h2>Some Numbers</h2>
              </div>
              
            </div>

            <div class="row">
              <div class="col-md-6">

                    <div class="block-18 d-flex align-items-center">
                            <div class="icon mr-4">
                              <span class="flaticon-books"></span>
                            </div>
                            <div class="text">
                              <strong class="number" data-number="192">0</strong>
                              <span>Articles</span>
                            </div>
                          </div>
                

                          <div class="block-18 d-flex align-items-center">
                                <div class="icon mr-4">
                                  <span class="flaticon-student"></span>
                                </div>
                                <div class="text">
                                  <strong class="number" data-number="121">0</strong>
                                  <span>Following</span>
                                </div>
                              </div>

              </div>
              <div class="col-md-6">
                    <div class="block-18 d-flex align-items-center">
                            <div class="icon mr-4">
                              <span class="flaticon-student"></span>
                            </div>
                            <div class="text">
                              <strong class="number" data-number="121">0</strong>
                              <span>Followers</span>
                            </div>
                          </div>

                <div class="block-18 d-flex align-items-center">
                  <div class="icon mr-4">
                    <span class="flaticon-mortarboard"></span>
                  </div>
                  <div class="text">
                    <strong class="number" data-number="1921">0</strong>
                    <span>Likes</span>
                  </div>
                </div>
                
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>
    <!-- END section -->

    <section class="site-section pt-3 element-animate">
            <div class="container">
              <div class="row">
                  <!---
                <div class="col-md-6 col-lg-3">
                  <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-book"></span></div>
                    <div class="media-body">
                      <h3 class="heading">Knowledge is power</h3>
                      <p></p>
                      <p><a href="#" class="more">Read More <span class="ion-arrow-right-c"></span></a></p>
                    </div>
                  </div> 
                </div>
              -->
                <div class="col-md-6 col-lg-4">
                  <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-student"></span></div>
                    <div class="media-body">
                      <h3 class="heading">Following</h3>
                      <p>view whom the user is following</p>
                      <p><a href="#" class="more"><span class="ion-arrow-right-c"></span></a></p>
                    </div>
                  </div> 
                </div>
                
                <div class="col-md-6 col-lg-4">
                  <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-diploma"></span></div>
                    <div class="media-body">
                      <h3 class="heading">Articles</h3>
                      <p>Have a look at  Articles</p>
                      <p><a href="#" class="more"> <span class="ion-arrow-right-c"></span></a></p>
                    </div>
                  </div> 
                </div>
                <div class="col-md-6 col-lg-4">
                  <div class="media block-6 d-block">
                    <div class="icon mb-3"><span class="flaticon-professor"></span></div>
                    <div class="media-body">
                      <h3 class="heading"> Followers</h3>
                      <p>View followers</p>
                      <p><a href="#" class="more"><span class="ion-arrow-right-c"></span></a></p>
                    </div>
                  </div> 
                </div>
              </div>
            </div>
          </section>

    <!-- End section-->

    <div class="py-5 block-22">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-8 mb-4 mb-md-0 pr-md-5 col-sm-12">
            <h2 class="heading">Follow the User to get Updates </h2>
            <p>By following the user u get notified when he puts up new articles</p>
          </div>
          <div class="col-md-4 col-sm-12">
           
            
                <Button class="btn btn-primary submit" style="background-color: white;color: teal;width: 40%" >Follow</Button>
         
           
          </div>
        </div>
      </div>
    </div>
  
    
    <!-- loader -->
    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#f4b214"/></svg></div>

    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/jquery-migrate-3.0.0.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.waypoints.min.js"></script>
    <script src="js/jquery.stellar.min.js"></script>
    <script src="js/jquery.animateNumber.min.js"></script>
    
    <script src="js/jquery.magnific-popup.min.js"></script>

    <script src="js/main.js"></script>
