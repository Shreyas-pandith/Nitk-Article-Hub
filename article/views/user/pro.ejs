                        <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="img-responcive img-circle img-thumbnail" alt="avatar">

                    </div><br>




                    <div class="row">
                        <div class="col-lg-6 col-sm-12">
                            <ul class="list-group">
                                <% if(student) { %>
                                    <li class="list-group-item text-muted"><%= student.firstname %></li>

                                    <li class="list-group-item text-right"><span class="pull-left"><%= student.lastname %></li>
                                    <li class="list-group-item text-right"><span class="pull-left"> <%= student.mobile %></li>

                            </ul>
                            <% } %>
                        </div>

                        <div class="col-lg-6 col-sm-12">
                            <ul class="list-group">
                                <% if(student) { %>
                                    <li class="list-group-item text-muted"><%= student.email %></li>

                                    <li class="list-group-item text-right"><span class="pull-left"><%= student.address %></li>
                                    <li class="list-group-item text-right"><span class="pull-left"><%= student.course %></li>

                            </ul>
                            <% } %>
                        </div>
                    </div>



                </div>

