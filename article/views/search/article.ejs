        <div class="comments-container">
            <h1>Comments </h1>

            <ul id="comments-list" class="comments-list">
                <% for(var i=0; i< comments.length;i++) { %>
                    <li>
                        <div class="comment-main-level">
                            <!-- Avatar -->
                            <div class="comment-avatar"><img src="/uploadnew/<%= comments[i].student.Index %>.png" alt=""></div>
                            <!-- Contenedor del Comentario -->
                            <div class="comment-box">
                                <div class="comment-head">
                                    <h6 class="comment-name by-author"><%= comments[i].student.firstname%> &nbsp;<%= comments[i].student.lastname%></h6>
                                    <span><%= comments[i].date%></span>

                                </div>
                                <div class="comment-content">
                                    <p style="white-space: normal;">  <%= comments[i].comment%></p>
                                </div>
                            </div>
                        </div>
                        <!-- Respuestas de los comentarios -->

                        <ul class="comments-list reply-list">
                            <% for(var j=0; j< reply.length;j++) { %>

                                <% if( comments[i]._id.equals(reply[j].comment) ){%>
                                    <li>
                                        <!-- Avatar -->

                                        <div class="comment-avatar"><img src="/uploadnew/<%= reply[j].student.Index %>.png" alt=""></div>
                                        <!-- Contenedor del Comentario -->
                                        <div class="comment-box">
                                            <div class="comment-head">
                                                <h6 class="comment-name"><%= reply[j].student.firstname%><%= reply[j].student.lastname%></h6>
                                                <span><%= reply[j].date%></span>

                                            </div>
                                            <div class="comment-content">
                                                <%= reply[j].reply%>
                                            </div>
                                        </div>
                                    </li>
                                <% }%>
                            <% }%>


                        </ul>

                    </li>


                <% } %>
